<!DOCTYPE html>
<html>
  <head>
    <title>petermellett.co.uk</title>
    <%= stylesheet_link_tag    "application" %>
    <%= javascript_include_tag "application" %>
    <%= csrf_meta_tags %>
    <%= favicon_link_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
  </head>
  <body>
    <div class="container-fluid" id="main">
      <!-- Start Header -->
      <div class="row-fluid">
        <div class="span9">
          <div id="header">
            <div id="logo">
            <%= link_to image_tag("logo.png"), root_url %>
            </div>
          </div>
        </div>
        <% if admin_signed_in? %>
        <div class="span3">
          <div id="aboutlinks">
            <%= link_to "New Article", new_article_path, :class => "btn btn-success" %>
            <%= link_to "Sign out", destroy_admin_session_path, :method => :delete, :class => "btn btn-danger" %>
          </div>
        </div>
      <% end %>
      </div>
      <!-- End Header -->
      <div class="row-fluid">
        <div class="span9">
          <div id="main"> 
            <% flash.each do |name, msg| %>
              <div class="alert alert-<%= name == :notice ? "success" : "error" %>">
                <a class="close" data-dismiss="alert" href="#">&times;</a>
                <%= msg  %>
              </div>
            <% end %>
            <div class="main_content well">
              <%= yield %>
            </div>
          </div>
        </div>
        <div class="span3">
          <%= render :partial => 'welcome/info' %>
          <%= render :partial => 'welcome/tweet' %>
        </div>
      </div>
    </div>
    <!-- Start Footer -->
    <div class="band">
      &nbsp;
    </div>
    <div class="footer">
      <div class="container-fluid">
        <div class="row-fluid">
          <div class="span12">
            <div class="row-fluid">
              <div class="span2">
                <%= render :partial => 'shared/thumbnail',
                           :locals => { :image_url => "avatar-tile.png",
                                        :image_alt => "About Me",
                                        :link_text => "About Me",
                                        :link_url => page_path("about"),
                                        :image_size => "200x150" } 
                %>
              </div>
              <div class="span2">
                <%= render :partial => 'shared/thumbnail',
                           :locals => { :image_url => "projects.png",
                                        :image_alt => "My Projects",
                                        :link_text => "My Projects",
                                        :link_url => "#",
                                        :image_size => "200x150",
                                        :caption => "Coming soon." } 
                %>
              </div>
              <div class="span2">
                <%= render :partial => 'shared/thumbnail',
                           :locals => { :image_url => "contact.png",
                                        :image_alt => "Contact",
                                        :link_text => "Contact Me",
                                        :link_url => contact_path,
                                        :image_size => "200x150" } 
                %>
              </div>
            </div>
          </div>
        </div>
        <div class="row-fluid">
          <div class="span12">
            <div id="copyright">
              <br />
              <em>Copyright &copy; Peter Mellett 2011-2012</em>
              <br />
            </div>
          </div>
        </div>
      </div>
    </div>
  <!-- End Footer -->
  </body>
</html> 