<div class="project_nav">
  <%= link_to "<< Back", projects_path %>
</div>
<div class="display_project">
  <h2 class="project_title"><%= @project.title %></h2>
  <div class="project_image">
    <%= image_tag @project.image.url(:medium) %>
  </div> 
  <div class="highlight_links">
  <% if !@project.source_repository.empty? %>
  <small><%= link_to "Source Code", @project.source_repository, :class => "btn btn-primary" %></small>
  <% end %>
  <% @project.highlights.each_with_index do | highlight, count | %>
    <%= link_to "Highlight #{count+1}", '#', :class => "highlight-link btn btn-success", :id => "#{highlight.id}" %>
  <% end unless @project.highlights.empty? %>
  </div>
  <% @project.highlights.each_with_index do | highlight, count | %>
    <%= content_tag :div, :class => "highlight-div", :id => "highlight-div-#{highlight.id}" do -%>
      <div class="row-fluid">
        <div class="span6">
          <% if !highlight.code_snippet.nil? && highlight.image.url(:medium) != "/images/medium/missing.png" %>
          <div class="row-fluid">
            <div class="span12 highlight-image">
              <%= image_tag highlight.image.url(:medium) %>
            </div>
          </div>
          <div class="row-fluid">
            <div class="span12">
              <h4>Code Snippet</h4>
              <p><%= markdown highlight.code_snippet %></p>
            </div>
          </div>
        <% elsif highlight.code_snippet.nil? %>
          <div class="highlight-image">
            <%= image_tag highlight.image.url(:medium) %>
          </div>
        <% else %>
          <h4>Code Snippet</h4>
          <p><%= markdown highlight.code_snippet %></p>
        <% end %>
        </div>
        <div class="span6">
          <h4>Description</h4>
          <p><%= markdown highlight.description %></p>
        </div>
      </div>
    <% end -%>
  <% end unless @project.highlights.empty? %>
  <div class="project_body">
    <%= markdown(@project.description) %>
  </div>


<%= link_to "<< Back", projects_path %>
<% if admin_signed_in? %> | 
<%= link_to 'Edit', edit_project_path(@project) %>
<% end %>
</div>