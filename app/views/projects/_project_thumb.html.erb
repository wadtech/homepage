<% @projects.each do | project | %>
<article class="article">
  <h3><%= project.title %></h3>
  <p><%= project.summary %></p>
  <p class="centre"><%= link_to (image_tag project.image.url(:medium), :alt => project.title), project if project.image.exists? %></p>
  <p><%= link_to "Read more", project %></p>
</article>
<% end %>
