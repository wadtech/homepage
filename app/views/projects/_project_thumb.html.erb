<% @projects.each do | project | %>
<div class="project-preview">
  <div class="row-fluid">
    <div class="span3"> 
      <div class="project-thumbnail">
        <%= link_to (image_tag project.image.url(:thumb), :alt => project.title), project %>
      </div>
    </div>
    <div class="span9"> 
      <h3><%= project.title %></h3>
      <p><%= project.summary %><br><br><%= link_to "Read more", project %></p>
    </div>
  </div>   
</div>
<% end %>