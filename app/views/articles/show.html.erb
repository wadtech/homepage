<div class="display_article">
  <div class="article_title_wrapper">
    <h1 class="article_title"><%= @article.title.titleize %></h1>
    <% if admin_signed_in? %>
      &nbsp;<%= link_to "edit", edit_article_path(@article) %><br />
    <% end %>
    <%= render :partial => 'articles/author_card', :locals => {:article => @article} %>
  </div>
  <div class="article_body">
    <%= markdown(@article.content) %>
  </div>

  <% if admin_signed_in? %>
  <p>
    <b>Published?</b> (Click to toggle.)<br />
    <%= render :partial => "publish_toggle", :locals => { :article => @article } %>
  </p>

  <%= link_to 'Edit', edit_article_path(@article) %> |
  <% end %>
  <%= link_to 'Home', root_url %>
</div>