<% #partial to display a selection of articles formatted for frontpage display %>

<div id="latest_articles">
<% @articles.each do |article| %>
  <div class="display_article">
    <div class="article_title_wrapper">
      <h1 class="article_title"><%= link_to article.title.titleize, article_url(article) %></h1>
      <% if admin_signed_in? %>
        &nbsp;<%= link_to "edit", edit_article_path(article) %>
      <% end %>
      <%= render :partial => 'articles/author_card', :locals => {:article => article} %>
    </div>
    <div class="article_body">
      <%= markdown(article.content) %>
    </div>
  </div>
<% end %>
</div>
