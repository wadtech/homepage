<%= form_tag root_path, :method => :get, :class => 'pull-right' do %>
  <div class="input-append">
    <%= text_field_tag :search, params[:search], class: 'searchbox', placeholder: 'Search' %>
    <%= button_tag :name => nil, :class => "btn" do %>
      <%= content_tag :i, '', :class => "icon-search" %>
    <% end %>
  </div>
<% end %>
